
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model Historial {
  id                Int     @id @default(autoincrement())
  kda              String
  partidas_totales Decimal @default(0)
  partidas_ganadas Decimal @default(0)
  partidas_perdidas Decimal @default(0)
  winrate          Decimal @default(0)
  usuarioId Int     @unique 
  usuario   Usuario @relation(fields: [usuarioId], references: [id])
}

model Usuario {
  id         Int       @id @default(autoincrement())
  nombre     String
  plata      Decimal   @default(0)
  rango      String 
  skins      Skins[]  
  historial  Historial? 
}


model Skins {
  id        Int      @id @default(autoincrement())
  nombre    String
  precio    Decimal  @default(100)
  tipo      String 
  rareza    String
  imagen    String 
  usuarioId Int? 
  usuario   Usuario?  @relation(fields: [usuarioId], references: [id])
}
